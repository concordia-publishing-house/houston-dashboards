<h1>Staging</h1>
<%= render "staging" %>

<%= content_for :javascripts do %>
<script type="text/javascript">
  $(function() {
    var $staging = $('#staging-stuff');

    new Refresher()
      .container('#container')
      .interval(45 * 1000) // 45 seconds
      .callback(function() {
        $.get('/dashboards/staging').done(function(html) {
          $staging.html(html);
        });
      }).render();
  });
</script>
<% end %>
